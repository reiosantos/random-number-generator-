{% extends './layout.html.twig' %}

{% block title %}{{ title }}{% endblock title %}

{% block body %}
	<div class="layout-waterfall mdl-layout mdl-js-layout">
		<header class="mdl-layout__header mdl-layout__header--waterfall">
			<div class="mdl-layout__header-row">
				<span class="mdl-layout-title">{{ title }}</span>
				<div class="mdl-layout-spacer"></div>

				<div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable mdl-textfield--floating-label mdl-textfield--align-right">
					<label class="mdl-button mdl-js-button mdl-button--icon" for="waterfall-exp">
						<i class="material-icons">search</i>
					</label>
					<div class="mdl-textfield__expandable-holder">
						<input class="mdl-textfield__input" type="text" name="sample"
						       id="waterfall-exp">
					</div>
				</div>
			</div>
			<div class="mdl-layout__header-row">
				<div class="mdl-layout-spacer"></div>
				{% include '../reusable/generate-button.html.twig' %}
			</div>
		</header>

		<div class="mdl-layout__drawer">
			<span class="mdl-layout-title">{{ title }}</span>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable mdl-textfield--floating-label mdl-textfield--align-right">
				<label class="mdl-button mdl-js-button mdl-button--icon" for="waterfall-exp-1">
					<i class="material-icons">search</i>
				</label>
				<div class="mdl-textfield__expandable-holder">
					<input class="mdl-textfield__input" type="text" name="sample"
					       id="waterfall-exp-1">
				</div>
			</div>
			{% include '../reusable/generate-button.html.twig' %}
		</div>

		<div class="mdl-layout__content">
			<div class="page-content">

				<div class="mdl-grid">
					<div class="mdl-cell mdl-cell--4-col mdl-shadow--8dp">

						<ul class="demo-list-two mdl-list">
							<li class="mdl-list__item">
							    <span class="mdl-list__item-primary-content">
								    <i class="material-icons mdl-list__item-avatar
								    mdl-color--teal">add</i>
							        <span class="mdl-color--amber-200">Total</span>
							    </span>
								<span class="mdl-list__item-secondary-content">
									<b class="mdl-list__item-secondary-action">{{ total }}</b>
								</span>
							</li>

							<li class="mdl-list__item">
							    <span class="mdl-list__item-primary-content">
								    <i class="material-icons mdl-list__item-avatar mdl-color--teal">call</i>
							        <span class="mdl-color--amber-200">Minimum No.</span>
							    </span>
								<span class="mdl-list__item-secondary-content">
									<b class="mdl-list__item-secondary-action">{{ minimum }}</b>
								</span>
							</li>

							<li class="mdl-list__item">
							    <span class="mdl-list__item-primary-content">
								    <i class="material-icons mdl-list__item-avatar mdl-color--teal">call</i>
							        <span class="mdl-color--amber-200">Maximum No.</span>
							    </span>
								<span class="mdl-list__item-secondary-content">
									<b class="mdl-list__item-secondary-action">{{ maximum }}</b>
								</span>
							</li>

						</ul>

					</div>

					<div class="mdl-cell mdl-cell--8-col">
						{% block content %}{% endblock content %}
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock body %}
